<?xml version="1.0" encoding="UTF-8"?>
<configuration>


  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS}  [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="rollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/application.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>logs/app-%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS}  [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="jsonRollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/json/application.log.json</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>logs/json/app-%d{yyyy-MM-dd}.log.json</fileNamePattern>
      <maxHistory>7</maxHistory>
    </rollingPolicy>
    <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
      <providers>
        <timestamp/>
        <message />
        <loggerName/>
        <threadName/>
        <logLevel />
        <stackTrace/>
      </providers>
    </encoder>
  </appender>

  <root level="info">
    <appender-ref ref="rollingFile" />
    <appender-ref ref="stdout" />
    <appender-ref ref="jsonRollingFile" />
  </root>

  <logger name="com.gateway" level="DEBUG">
    <appender-ref ref="rollingFile" />
    <appender-ref ref="stdout" />
    <appender-ref ref="jsonRollingFile" />
  </logger>
</configuration>
