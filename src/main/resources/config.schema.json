        "I_DEBUG",
        "I_SIGNAL_REPORT_REQUEST",
        "I_SIGNAL_REPORT_REVERSE",
        "I_SIGNAL_REPORT_RESPONSE",
        "I_PRE_SLEEP_NOTIFICATION",
        "I_POST_SLEEP_NOTIFICATION",
        "STREAM"
      ]
    }
  }
}
